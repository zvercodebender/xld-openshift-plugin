            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <os-script>
                <script>openshift/deploy-binary-app-module</script>
                <order>61</order>
            </os-script>
        </steps>
    </rule>

    <rule name="openshift.BinaryAppModule.DESTROY" scope="deployed">
